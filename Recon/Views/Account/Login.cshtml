@using Newtonsoft.Json;
@using Recon.Utility;
@model Recon.ViewModel.LoginViewModel
<style>
    .login-background {
        background: #ededed;
        border-radius: 50px;
        /*display: flex;
        flex-direction: row;*/
        justify-content: space-between;
        align-items: center;
        padding:50px;
    }

    .login-form {
        width: 100%;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }
    
</style>
@if (ViewBag.ToastMessages != null)
{
    <script>
        $(function () {
            var messages = @Html.Raw(JsonConvert.SerializeObject(ViewBag.ToastMessages));
            for (var i = 0; i < messages.length; i++) {
                var message = messages[i];
                var type = "info";
                if (message.type == 0) {
                    type = "error"
                }
                if (message.type == 1) {
                    type = "info"
                }
                if (message.type == 2) {
                    type = "succes"
                }
                if (message.type == 3) {
                    type = "warning"
                }
                console.log(i);
                console.log(message.time)
              //  DevExpress.ui.notify({message: message.message, type:type}, { position: "center", direction: "up-push" }
                });
            }
        });
    </script>
}
<div class="row" style="margin-top:150px!important;">
  
        <div class="col-xl-4 col-xxl-4 col-sm-10">
            <img src="~/img/singupsvg.svg" style="width: 400px; height: 400px;" />
        </div>

    <div class="col-sm-10 col-xl-4 col-xxl-4 login-form"style="margin-top:50px!important;">
            <h2 style="text-align:center">Bejelentkezés</h2>
            <form asp-action="Login" method="post">
                <div id="form-container"></div>

                <!--<div class="form-group">
                    <label for="username">Felhasználónév</label>
                    <input type="text" class="form-control" id="username" name="username" />
                </div>
                <div class="form-group">
                    <label for="password">Jelszó</label>
                    <input type="password" class="form-control" id="password" name="password" />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                -->
            </form>
        </div>
    
</div>


<script>
    $(function () {
        $("#form-container").dxForm({
            formData: {},
            colCount: 1,
            labelLocation: "top",
            items: [{
                dataField: "username",
                editorType: "dxTextBox",
                label: { text: "Felhasználónév" }
            }, {
                dataField: "password",
                editorType: "dxTextBox",
                editorOptions: {
                    mode: "password"
                },
                label: { text: "Jelszó" }
            }, {
                itemType: "button",
                buttonOptions: {
                    text: "Login",
                    type: "success",
                    useSubmitBehavior: true
                }
            }]
        });
    });
</script>


