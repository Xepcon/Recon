<div id="gridContainer"></div>

<script>
    var userData;

    $.ajax({
        url: `@Url.Content("~/api/ListUser")`,
        type: 'GET',
        dataType: 'json',
        async: false,
        success: function (data) {
            userData = data
            console.log(data)
        },
        error: function (error) {
            console.log(error); 
        }
    });

    var roleData;

    $.ajax({
        url: `@Url.Content("~/api/ListRole")`,
        type: 'GET',
        dataType: 'json',
        async: false,
        success: function (data) {
            roleData = data
           console.log(data)
        },
        error: function (error) {
            console.log(error); 
        }
    });

    $(function () {
        var dataSource = @Html.Raw(ViewBag.data);

        $("#gridContainer").dxDataGrid({
            dataSource: dataSource,
            columns: [
              
                 {
                    dataField: "roleId",
                    caption: "Szerepkör",
                    lookup: {
                        dataSource: roleData,
                        valueExpr: "id",
                        displayExpr: "name",
                    },
                },
                {
                    dataField: "userId",
                    caption: "Felhasználó",
                    lookup: {
                        dataSource: userData,
                        valueExpr: "userId",
                        displayExpr: "name",
                    },
                },
                {
                    type: 'buttons',
                    buttons: [
                       
                        {
                            hint: 'Törlés',
                            icon: 'remove',
                            onClick(e) {

                                console.log(e.row)
                                console.log(e.row.data.AttendanceId)
                                //Api


                                const confirmation = window.DevExpress.ui.dialog.confirm("Biztosan törölni szeretné a szerepkört?", "Megerősítés");
                                confirmation.then((dialogResult) => {
                                    if (dialogResult === true) {
                                        $.ajax({
                                            type: "POST",
                                            url: "@Url.Content("~/UsersInRoles/Delete?roleid=")"+ e.row.data.roleId+"&userid="+e.row.data.userId,
                                            success: function () {
                                                location.reload();
                                            },
                                            error: function () {
                                                window.DevExpress.ui.dialog.alert("Hiba történt a szerepkör törlésekor!", "Hiba");
                                            }
                                        });
                                    }
                                });
                            }
                        }
                    ]
                },


            ],
            toolbar: {
                items: [
                    {
                        widget: "dxButton",
                        options: {
                            icon: 'add',
                            onClick() {
                                window.location.href = `@Url.Content("~/UsersInRoles/Create/")`;
                            }
                        }
                    }

                ]
            }



        });
    });
</script>