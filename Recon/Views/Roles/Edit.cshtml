
<form action="@Url.Content("~/Roles/Edit/")" method="post">
    <div id="form-container"></div>
</form>



@section scripts {
    <script>
       
        $(function () {


            var formData = @Html.Raw(ViewBag.data);
            $("#form-container").dxForm({
                formData: formData,
                items: [
                    {
                        dataField: "Id",
                        label: { text: "Group ID" },
                        editorOptions: {
                            readOnly: true
                        }

                    },
                    {
                        dataField: "Name",
                        label: { text: "Name" }
                    },
                 
                    {
                        itemType: "button",
                        buttonOptions: {
                            text: "Save",
                            type: "success",
                            useSubmitBehavior: true,
                        }
                    }
                ],

                labelLocation: "top"
            });
        });
    </script>
}